<% include ../partials/header %>

<div class="container">

    <header class="jumbotron">
        <h1>Welcome to MovieSharing!</h1>
        <p>Share your movie review with the world</p>
        <p>
            <a class="btn btn-primary btn-large"href="/moviegrounds/new">Add a new movie</a>    
        </p>
        
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% moviegrounds.forEach(function(movieground){ %>
       <div class="col-md-3 col-sm-6">
           <div class="thumbnail">
               <img src="<%= movieground.image %>" > 
               <div  class="caption">
               <h4><%= movieground.name %></h4>    
               </div>
           </div>
           <p>
               <a href="/moviegrounds/<%= movieground._id %>" class="btn btn-primary">More Info</a>
           </p>
       </div>
    <% }); %>    
    </div>
    
    
    
    

</div>
<% include ../partials/footer %>