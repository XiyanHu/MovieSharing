<% include ../partials/header %>
 
 <div class="container">
     <div class="row">
        <h1 style="text-align:center">Add New Comment to <%= movieground.name %></h1>
        <div style="width:30%; margin: 25px auto">
            <form action="/moviegrounds/<%= movieground._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" placeholder="author">
                </div>
               
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-default btn-block">Submit!</button>
                </div>
                 
                <a href="/moviegrounds">Go back!</a>
            </form>
        </div>
        
    </div>
</div>
<% include ../partials/footer %>